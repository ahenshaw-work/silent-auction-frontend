{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["src", "shared", "config", "modern.config.ts"],
  "exclude": ["**/node_modules"],
  "moduleResolution": "nodenext"
}
